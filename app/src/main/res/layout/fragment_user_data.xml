<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.UserDataFragment">

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="121dp"
        android:layout_height="157dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:hint="FEDERICO"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_home"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/iv_home"
        app:layout_constraintTop_toBottomOf="@+id/iv_home"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_home_passwd"
        android:layout_width="216dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:hint="ContraseÃ±a 123"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_home_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/btn_home_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/btn_color"
        android:text="@string/btn_salir"
        app:icon="@drawable/ic_exit"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_passwd"
        app:layout_constraintVertical_bias="0.129" />

    <Button
        android:id="@+id/btn_home_delete"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/btn_color_delte"
        android:text="@string/btn_eliminar"
        app:icon="@drawable/ic_delete"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toEndOf="@+id/btn_home_exit"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_passwd"
        app:layout_constraintVertical_bias="0.129" />
</androidx.constraintlayout.widget.ConstraintLayout>